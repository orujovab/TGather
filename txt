2
num = input('Input a number:') 
total = 0 
while num != '': 
    try: 
        num = int(num) 
        total = total + num 
        print('Current sum:', total) 
    except: 
        print('You should enter an integer.') 
    num = input('Input a number: ') 
print('Total sum:', total)




3
try: 
    a = int(input('Enter a dividend:')) 
    b = int(input('Enter a divisor:')) 
    print(f'{a} : {b} = {round(a/b, 2)}') 
except ValueError: 
    print('It is not an integer!') 
except ZeroDivisionError: 
    print('You can not divide by zero!')
    
4
def check_number(num): 
    try: 
        return float(num) 
    except: 
        return 'Not a number' 
  
data = input('Enter a series of numbers separated by a space:').split() 
new_data = [] 
for num in data: 
    new_data.append(check_number(num)) 
print('Amount of numbers:', len(new_data) - new_data.count('Not a number')) 
print('Amount of non-numeric values:', new_data.count('Not a number'))



5
data = {} 
for item in input('Enter a list of destinations separated by a space:').split(): 
    data[item] = 0 
while input('Do you want to buy a tour (1 - yes, 0 - no)?') != '0': 
    try: 
        data[input('Enter your desired destination:')] += int(input('How many tickets do you want?')) 
    except KeyError: 
        print('This destination is not available.') 
    except ValueError: 
        print('Incorrect data about the number of tickets.') 
for item in data: 
    print(f'Destination - {item}, number of orders - {data[item]}.')
