def check(word1, word2):
    if len(word1) != len(word2):
        return False
    else:
        differences = 0
        for i in range(len(word1)):
            if word1[i] != word2[i]:
                differences += 1
    if differences > 1:
        return False
    else:
        return True

word1 = input('İlk sözü daxil edin')
word2 = input('İkinci sözü daxil edin')

if check (word1, word2):
    print('Sözlər oxşardır')
else:
    print('Sözlər fərqlidir')
