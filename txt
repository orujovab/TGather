user = input('İstifadəçini daxil edin: ')
filename = input('Faylın adını daxil edin: ')
print(f'C:/{user}/docs/folder/{filename}.txt')



a = input('İfadəni daxil edin: ')
print(a[0])
print(a[-1])
print(a[0:4])
print(a[4:])
print(a[0::2])
print(a[1::2])
print(a[::-1])




a = input('Sözü daxil edin: ')
b = int(input('Əvəz etmək üçün simvolun nörəsi: '))
c = input('Nə ilə əvəz edilməlidir: ')
print(a.replace(a[b-1],c))





words = input('Bir neçə sözdən ibarət ifadəni daxil edin:')
hashtags = "#"
for i in words:
      if i== ' ':
          hashtags += ' #'
      else:
          hashtags += i
print(hashtags)






string = input("İngilis dilində ifadə və ya söz yazın:")
vowels = "aeiou"
vowel = 0
for i in string.lower():
  if i in vowels:
    vowel = vowel + 1
print(f"Sətirdəki saitlərin sayı: {vowel}")










string = input('Mətni daxil edin:')
vowels = 'aeiou'
for vowel in vowels:
    num = string.count(vowel)
    print(f"Hərflərin sayı '{vowel}': {num}")
    
    
    
    
    
task = input('Hərflərin ardıcıllığını daxil edin:').lower()
phrase = input(f'Sözləri "{task}" hərfləri ilə başlayan ifadəni daxil edin.').lower()
done = True
for letter in task:
    if phrase[0] != letter:
        done = False
        break
    phrase = phrase[phrase.find(' ')+1:]
if done == True:
    print('Tapşırıq yerinə yetirildi!')
else:
    print('Tapşırıq yerinə yetirilə bilinmədi.')    
    
    
    
